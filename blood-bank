def newDonor():
    import mysql.connector
    con=mysql.connector.connect(host="localhost",
                                user="root",
                                password="8765669688",
                                database="blood_bank")
    cur=con.cursor
    id=input("Enter DonorId: ")
    n=input("Enter your name: ")
    db=input("Enter D.O.B: ")
    adh=input("Enter aadhar no: ")
    bg=input("Enter your blood group: ")
    p=input("Enter phone no: ")
    g=input("Enter your gmail: ")
    ad=input("Enter your address: ")
    d1=(id,n,db,adh,bg,p,g,ad)
    d2=(id,n,bg,p,g,ad)
    cur.execute('insert into donors(%s,%s,%s,%s,%s,%s,%s,%s)'%d1)
    cur.execute('insert into donor_details(%s,%s,%s,%s,%s,%s)'%d2)
    con.commit()
    con.close()
    print("Donor added successfully.")
    main()

def donationreq():
    import mysql.connector
    con=mysql.connector.connect(host="localhost",
