                                database="blood_bank")
    cur=con.cursor
    print("Enter patient details.")
    id=("Enter Id: ")
    n=input("Enter name: ")
    phn=input("Enter your phn no: ")
    bg=input("Blood Group required: ")
    age=input("Enter age: ")
    hd=input("Enter hospital details: ")
    d=(id,n,phn,bg,age,hd)
    cur.execute('insert into anemic_patient(%s,%s,%s,%s,%s,%s)'%d)
